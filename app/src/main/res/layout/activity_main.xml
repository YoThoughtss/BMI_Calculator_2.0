<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Calculator"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textColor="@color/darthmouth_green"
        tools:ignore="HardcodedText" />

    <!--Horizontal Line-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:background="@color/darthmouth_green"
        />

    <!--Weight-->
    <TextView
        android:id="@+id/tv_label_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight :"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:autofillHints="no"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Enter Weight"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColorHint="@color/darthmouth_green"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/spinner_weight_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:minHeight="48dp" />

    <!--Height-->
    <TextView
        android:id="@+id/tv_label_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height :"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        tools:ignore="HardcodedText"
        />

    <EditText
        android:id="@+id/et_height"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:autofillHints="no"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Enter Height"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColorHint="@color/darthmouth_green"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/spinner_height_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:minHeight="48dp" />

    <!--Button-->
    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:backgroundTint="@color/darthmouth_green"
        tools:ignore="HardcodedText" />

    <!--Horizontal Line-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:background="@color/darthmouth_green"
        />

    <!--Result-->
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your BMI will appear here"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        tools:ignore="HardcodedText"
        />


</LinearLayout>